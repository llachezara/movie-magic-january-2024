<section id="search">
  <h1>Search</h1>
  <form action="" method="GET" class="form">
    <input type="text" class="search" name="title" value="{{params.title}}" placeholder="Title..." />
    <input type="text" name="genre" class="genre" value="{{params.genre}}" placeholder="Genre..." />
    <input type="number" name="year" class="year" value="{{params.year}}" placeholder="Year..." />
    <input type="submit" value="search" />
  </form>
</section>

<section id="catalog">
  <div class="band">
     {{> catalog}}
  </div>
</section>